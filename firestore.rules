/**
 * @fileOverview Firestore Security Rules for the Daily Script app.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data
 * and allows public read access to Bible verses and daily verses.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/settings/{settingsId}: Stores user-specific settings.
 * - /users/{userId}/favoriteVerses/{favoriteVerseId}: Stores user's favorite verses.
 * - /verses/{verseId}: Stores Bible verses (publicly readable).
 * - /dailyVerses/{date}: Stores the verse of the day (publicly readable).
 *
 * Key Security Decisions:
 * - User listing is disallowed for privacy.
 * - All user-specific data is secured via path-based ownership.
 * - Verse data is publicly readable.
 * - Daily verses are publicly readable.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their own profile document.
     *          request.auth.uid == 'user123' and request.resource.data.id == 'user123'
     * @allow (get, list, update, delete) User with ID 'user123' can read, update, and delete their own profile document.
     *          request.auth.uid == 'user123' and resource.data.id == 'user123'
     * @deny (create) User with ID 'user456' cannot create a profile document for user 'user123'.
     *          request.auth.uid == 'user456' and request.resource.data.id == 'user123'
     * @principle Enforces document ownership for writes and prevents unauthorized access.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to user settings documents.
     * @path /users/{userId}/settings/{settingsId}
     * @allow (create) User with ID 'user123' can create their own settings document.
     *          request.auth.uid == 'user123' and request.resource.data.id == 'user123'
     * @allow (get, list, update, delete) User with ID 'user123' can read, update, and delete their own settings document.
     *          request.auth.uid == 'user123' and resource.data.id == 'user123'
     * @deny (create) User with ID 'user456' cannot create a settings document for user 'user123'.
     *          request.auth.uid == 'user456' and request.resource.data.id == 'user123'
     * @principle Enforces document ownership for writes and prevents unauthorized access.
     */
    match /users/{userId}/settings/{settingsId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to user's favorite verses.
     * @path /users/{userId}/favoriteVerses/{favoriteVerseId}
     * @allow (create) User with ID 'user123' can create their own favorite verse entry.
     *          request.auth.uid == 'user123'
     * @allow (get, list, update, delete) User with ID 'user123' can read, update, and delete their own favorite verse entries.
     *          request.auth.uid == 'user123'
     * @deny (create) User with ID 'user456' cannot create a favorite verse entry for user 'user123'.
     *          request.auth.uid == 'user456'
     * @principle Enforces document ownership for writes and prevents unauthorized access.
     */
    match /users/{userId}/favoriteVerses/{favoriteVerseId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to Bible verses.
     * @path /verses/{verseId}
     * @allow (get, list) Any user can read the verse data.
     * @deny (create, update, delete) No one can create, update, or delete verses through the client.
     * @principle Allows public read access to verse data.
     */
    match /verses/{verseId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to daily verses.
     * @path /dailyVerses/{date}
     * @allow (get, list) Any user can read the daily verse data.
     * @deny (create, update, delete) No one can create, update, or delete daily verses through the client.
     * @principle Allows public read access to daily verse data.
     */
    match /dailyVerses/{date} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}
